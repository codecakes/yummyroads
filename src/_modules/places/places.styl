// All about slider where results are shown
.slider-holder
    width: 800px;
    height: 500px;
    background-color: transparent;
    margin-left: auto;
    margin-right: auto;
    margin-top: 10px;
    text-align: center;
    overflow: hidden;

.div-img-holder
    left: 0px;
    width: 2400px;
    // background-color: transparent;
    height: 400px;
    clear: both;
    position: relative;

    -webkit-transition: left 1s;
    -moz-transition: left 1s;
    -o-transition: left 1s;
    transition: left 1s;

.slider-image
    float: left;
    margin: 0px;
